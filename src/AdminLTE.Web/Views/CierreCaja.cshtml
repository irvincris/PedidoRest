                <div class="input-group input-group-sm mb-3">
                    <div class="input-group-append">
                        <span class="input-group-text" style="font-weight:bold">TOTAL EFECTIVO:</span>
                    </div>
                    <input type="text" class="form-control estilo" id="totalEfectivo" disabled>
                </div>

                <div class="input-group input-group-sm mb-3">
                    <div class="input-group-append">
                        <span class="input-group-text" style="font-weight:bold">TOTAL TARJETA:</span>
                    </div>
                    <input type="text" class="form-control estilo" id="totalTarjeta" disabled>
                </div>
                <u style="font-weight: bold; font-style: italic; color: navy">DETALLE CAJA (BS)</u>
